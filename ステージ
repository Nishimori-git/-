import sys
import pygame
from pygame.locals import QUIT

# pygame初期化
pygame.init()
SURFACE = pygame.display.set_mode((800, 600))
FPSCLOCK = pygame.time.Clock()

# 画像読み込み
background = pygame.image.load("haikei.png").convert()
player_img = pygame.image.load("player.png").convert_alpha()

# キャラの位置
player_rect = player_img.get_rect()
player_rect.center = (200, 100)

while True:
    for event in pygame.event.get():
        if event.type == QUIT:
            pygame.quit()
            sys.exit()

    # 描画
    SURFACE.blit(background, (0, 0))      # 背景
    SURFACE.blit(player_img, player_rect) # キャラ

    pygame.display.update()
    FPSCLOCK.tick(60)
