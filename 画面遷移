import pygame
from title import title_loop
from game import game_loop
from gameover import gameover_loop

def main():
    pygame.init()
    screen = pygame.display.set_mode((800, 600))

    state = "TITLE"

    while True:
        if state == "TITLE":
            state = title_loop(screen)
        elif state == "GAME":
            state = game_loop(screen)
        elif state == "GAMEOVER":
            state = gameover_loop(screen)
        else:
            break

    pygame.quit()

if __name__ == "__main__":
    main()
