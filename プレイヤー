import sys
import pygame
from pygame.locals import * # pygame.localsから＊をインポートしてPygameの定数を直接使用できるように

class player(pygame.sprite.Sprite):
  gravity = 1
  jump_power = -10
  speed = 3
  
  def __init__ (self,Player.png) 　#画像ファイルを入力
    self.image = pygame.image.load(ari.png).convert()
    self.image = pygame.transform.scale(ari.png,(100,50))
    self.bangimage = pygame.image.load() 　#ゲームオーバー時の画像
    self.bangimage = pygame.transform.scale(  ,(50,50))
    self.rect = self.image.get_rect()
  def start(self):

  def disp(self):
    screen.blit(self.image,(20,5)
    
  def play(self):
    player_vel_y += gravity
    player_pos[1] += player_vel_y
    if event.type == pygame.KEYDOWN:
        if event.key == pygame.K_SPACE and not jump_now
            player_vel_y = jump_power
            jump_now = True
    if self.rect.left < 5:
        screen.blit(self.bangimage,(self.rect))
        pygame.time.wait(2000) #2秒後にゲームオーバーの画面表示を行う
        screen.blit()
        
      

    
    
